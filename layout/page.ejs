<div class="sidebar">
  <div class="sidebar-inner">
    <header class='header'><h2><%- (config.resume && config.resume.name) ? config.resume.name : theme.resume.name %></h2>
      <div class='meta'>
        <% if (theme.sidebar && theme.sidebar.email && config.resume && config.resume.email) { %>
          <p><a href='<%- 'mailto:' + config.resume.email %>'><i class="fas fa-envelope fa-fw"></i>&nbsp;&nbsp;<%- config.resume.email %></a></p>
        <% } %>
        <% if (theme.sidebar && theme.sidebar.phone && config.resume && config.resume.phone) { %>
          <p><i class="fas fa-phone-alt fa-fw"></i>&nbsp;&nbsp;<%- config.resume.phone %></p>
        <% } %>
      </div>
    <hr><br>
    </header>
    <div class="list">
      <ul class="menu-root">
        <% site.pages.sort('order').each(function (p) { %>
          <li>
            <a href="<%- url_for(p.path) %>" class="sidebar-link<%- page.title === p.title ? ' current' : '' %><%- p.is_new ? ' new' : '' %>"><%- p.title %></a>
          </li>
        <% }) %>
      </ul>
    </div>
    <% if (theme.sidebar && theme.sidebar.download && config.resume && config.resume.download) { %>
      <br><br>
      <a class="button" href="<%- config.resume.download.url %>"><i class="<%- config.resume.download.icon %>"></i> <%- config.resume.download.title %></a>
    <% } %>

  </div>
</div>

<div class="content with-sidebar">
  <%- page.content %>
  <br><br><br>
</div>
